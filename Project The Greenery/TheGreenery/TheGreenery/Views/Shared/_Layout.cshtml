<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - The Greenery</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @System.Web.Optimization.Styles.Render("~/Content/Site.css")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    @if (Request.IsAuthenticated)
    {
        <strong>@Html.Encode(User.Identity.Name)</strong>
        @Html.ActionLink("Log Out", "Logout", "User")
        <div id="menubalk" style="float:right">  <a href="@Url.Action("MijnGegevens","Home") "><u>Mijn Gegevens</u></a></div>
    }
    else
    {
        @Html.ActionLink("Register", "Registreer", "User")
        <span> | </span>
        @Html.ActionLink("Log In", "Login", "User")
        <span> | </span>
        @Html.ActionLink("Personeel Log In", "PersoneelLogIn", "Personeel")
    }

    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <a href="@Url.Action("Index","Home")"><img src="@Url.Content("~/Images/logo.png")" alt="Home" /></a>
            </div>
            <div class="float-right">

                <section id="login">
                    <div style="float:right">
                        <form naam="input" action="@Url.Action("Showproduct", "Product")" method="post">
                            <input type=text name="naam" placeholder="zoekproduct" />
                            <input type="submit" value="zoeken" />
                        </form>
                    </div>
                </section>
                <div style="float:right" id="menu">

                    <div style="float:left"><a href="@Url.Action("/Winkelwagen") "> <img border="0" alt="Greenery" src="~/Images/winkelwagen.png" /></a></div>
                    <div style="float:left">@Html.ActionLink("Home", "Index", "Home")</div>
                    <div style="float:left">@Html.ActionLink("  Over Ons", "About", "Home")</div>
                    <div style="float:left">@Html.ActionLink("  Contact", "Contact", "Home")</div>
                </div>
                <nav>
                    <hr width="100%" align="right" size="0" />
                    @using (Html.BeginForm())
                    {
                        <div id="menubalk" style="float:left">  <a href="@Url.Action("Index", "Home") "> <img width="160" height="40" img border="0" alt="Greenery" src="~/Images/button_aanbiedingen.png" /> </a></div>
                        <div id="menubalk" style="float:left">  <a href="@Url.Action("LentePage", "Home") "> <img width="90" height="40" img border="0" alt="Greenery" src="~/Images/button_lente.png" /> </a></div>
                        <div id="menubalk" style="float:left">  <a href="@Url.Action("ZomerPage", "Home") "> <img width="90" height="40" img border="0" alt="Greenery" src="~/Images/button_zomer.png" /></a></div>
                        <div id="menubalk" style="float:left">  <a href="@Url.Action("HerfstPage", "Home") "> <img width="90" height="40" img border="0" alt="Greenery" src="~/Images/button_herfst.png" /> </a></div>
                        <div id="menubalk" style="float:left">  <a href="@Url.Action("WinterPage", "Home") "> <img width="90" height="40" img border="0" alt="Greenery" src="~/Images/button_winter.png" /> </a></div>

                    }
                    <hr width="100%" align="right" size="0" />
                </nav>

            </div>
        </div>
    </header>

    @RenderSection("featured", required: false)
    <section class="content-wrapper main-content clear-fix">

        @RenderBody()
    </section>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>
                    &copy; @DateTime.Now.Year - The Greenery
                    @Html.ActionLink("AlgemeneVoorwaarden", "AlgemeneVoorwaarden", "Home") &nbsp; &nbsp; @Html.ActionLink("Privacypolicy", "Privacypolicy", "Home") &nbsp; &nbsp; @Html.ActionLink("FAQ", "FAQ", "Home")
            </div>
        </div>
        <div style="float:right"> <img width="90" height="90" border="0" alt="Greenery" src="~/Images/ekokeurmerk.jpg"><img /></div>
    </footer>

</body>
</html>