<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @System.Web.Optimization.Styles.Render("~/Content/Site.css")
</head>
<body>

    @Html.ActionLink("Mijn Gegevens", "MijnGegevens", "User")
    <span> | </span>
    @Html.ActionLink("Log uit", "Index", "Home")

    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <a href="@Url.Action("Index", "Home")"> <img border="0" alt="Greenery" src="~/Images/logo.png"><img /></a>
            </div>

            <div id="menubalk" style="float:right">  <a href="@Url.Action("/MijnGegevens") "><u>Mijn Gegevens</u></a></div>
            <div id="menubalk" style="float:right">  <a href="@Url.Action("/Registreer") "><u>Registreer</u></a></div>
            <div id="menubalk" style="float:right">  <a href="@Url.Action("/Login") "></a><u>Log in</u></div>

            <div class="float-right">
                <section id="login">
                    <div style="float:right">
                        <form naam="input" action="/Home/ShowProduct" method="post">
                            <input type=text name="naam" placeholder="zoekproduct" />
                            <input type="submit" value="zoeken" />
                        </form>
                    </div>
                </section>
                <div style="float:right" id="menu">
                    <div style="float:left"><a href="@Url.Action("/Winkelwagen") "> <img border="0" alt="Greenery" src="~/Images/winkelwagen.png" /></a></div>
                    <div style="float:left">@Html.ActionLink("Home", "Index", "Home")</div>
                    <div style="float:left">@Html.ActionLink("  Over Ons", "About", "Home")</div>
                    <div style="float:left">@Html.ActionLink("  Contact", "Contact", "Home")</div>
                </div>
                <nav>
                    @using (Html.BeginForm())
                    {
                        <hr width="100%" align="right" size="0" />
                        <div>
                            <div id="menubalk" style="float:left">  <a href="@Url.Action("ProductenInzien", "Manager") "><img width="160" height="40" img border="0" alt="Greenery" src="~/Images/button_ProductenInzien.png" /> </a></div>
                            <div id="menubalk" style="float:left">  <a href="@Url.Action("PersoneelInzien", "Manager") "><img width="160" height="40" img border="0" alt="Greenery" src="~/Images/button_PersoneelInzien.png" /> </a></div>
                        </div>
                    }
                </nav>
            </div>
        </div>
    </header>
    @RenderSection("featured", required: false)
    <section class="content-wrapper main-content clear-fix">
        @RenderBody()
    </section>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>
                    &copy; @DateTime.Now.Year - The Greenery
                    @Html.ActionLink("AlgemeneVoorwaarden", "AlgemeneVoorwaarden", "Home") &nbsp; &nbsp; @Html.ActionLink("Privacypolicy", "Privacypolicy", "Home") &nbsp; &nbsp; @Html.ActionLink("FAQ", "FAQ", "Home")
                </p>
            </div>
        </div>
        <div style="float:right"> <img border="0" alt="Greenery" src="~/Images/ekokeurmerk.jpg"><img /></div>
    </footer>
</body>
</html>